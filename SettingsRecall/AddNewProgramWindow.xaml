<Window x:Class="SettingsRecall.AddNewProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose New Program Name" Height="102" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Height="72" VerticalAlignment="Top">
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="nameText" HorizontalAlignment="Left" Height="23" Margin="54,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" TabIndex="0" KeyUp="nameText_KeyUp"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="207,41,0,0" VerticalAlignment="Top" Width="75" Click="OKButton_Click" TabIndex="1"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="127,41,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click" IsCancel="True" TabIndex="2" />
    </Grid>
</Window>
